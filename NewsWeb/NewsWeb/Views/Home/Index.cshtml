@using NewsWeb.Models;
@using PagedList.Mvc;
@model PagedList.PagedList<TINTUC>
@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="jumbotron">
    <div class="row">
        @foreach (var tintuc in Model)
        {
            <div class="col-sm-4 col-lg-4 col-md-4">
                <div class="thumbnail">
                    <a href="@Url.Action("Details", "Home", new { id = tintuc.Matintuc})">
                        <img src="~/Content/News_images/@tintuc.Anhbia" width="150">
                    </a>
                    <div>
                        <br\>
                            <h4 style="text-align:center">@tintuc.Tentintuc</h4>
                            <p></p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@*Tạo liên kết các trang*@
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
<div class="MenuPage">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>
<style>
.MenuPage li {
    display: inline;
    }
</style>