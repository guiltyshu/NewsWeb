@model NewsWeb.Models.TINTUC

@{
    ViewBag.Title = "editTintuc";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>CHỈNH SỬA TIN TỨC</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Matintuc)

        <div class="form-group">
            @Html.LabelFor(model => model.Matintuc, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div style="font: 18px; padding; 5px 0 0 5px">
                    @Model.Matintuc
                </div>
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">
                Tên tin tức
            </span>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Tentintuc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tentintuc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">
                Mô tả
            </span>
            <div class="col-md-10">
                <textarea name="Mota">Mô tả thông tin sách</textarea>
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">
                Ảnh bìa
            </span>
            <div class="col-md-10">
                <input type="file" name="fileupload" />
                <img src="@Url.Content("~/Content/News_images/" +  Model.Anhbia)" width="120px"/> (Ảnh hiện tại)
                @ViewBag.Thongbao
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">
                Ngày cập nhật
            </span>
            <div class="col-md-10">
                <input type="date" name="Ngaycapnhat" />
                @Html.ValidationMessageFor(model => model.Ngaycapnhat, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="control-label col-md-2">
                Chủ đề
            </span>
            <div class="col-md-10">
                @Html.DropDownList("MaCD")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
